@model WebAppcomuniCancion.Models.UsuariosLoginDto

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center mb-4 text-white" >
            <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
        </h2>

        @if (ViewBag.LoginMessage != null)
        {
            <div class="alert @(ViewBag.LoginSuccess ? "alert-success" : "alert-danger")" role="alert">
                @ViewBag.LoginMessage
            </div>
        }
      
        
         <div class="card p-4 shadow-sm">
            <div class="mb-4">
                <h5 class="card-title mb-3" style="color: #EB1B64;">
                    <i class="fas fa-user-circle"></i> Credenciales
                </h5>

                <form asp-controller="Login" asp-action="LoginUser" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="User"></label>
                        <input asp-for="User" class="form-control" placeholder="Tu nombre de usuario" /> 
                        <span asp-validation-for="User" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" placeholder="Tu contraseña" autocomplete="off" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Entrar</button> 
                    </div>
                </form>
            </div>

            <div class="text-center mt-3">
                <a href="#" class="text-muted">¿Olvidaste tu contraseña?</a>
            </div>

        </div> 

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

