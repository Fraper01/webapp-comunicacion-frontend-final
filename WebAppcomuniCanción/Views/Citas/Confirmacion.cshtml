@{
    // Si tu Confirmacion.cshtml usa un Layout, lo incluyes aquí
    // Layout = "~/Views/Shared/_Layout.cshtml"; // O el Layout que estés usando
    ViewData["Title"] = "Cita Agendada Exitosamente";
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-body p-5">
                    <h2 class="card-title text-success mb-4">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </h2>
                    <h3 class="mb-3">¡Cita Agendada Exitosamente!</h3>
                    <p class="lead mb-4">
                        Gracias por ponerte en contacto con nosotros. Hemos recibido tu solicitud de cita y nos pondremos en contacto contigo lo antes posible para confirmar los detalles.
                    </p>
                    <hr>
                    <p class="text-muted small">
                        Puedes regresar a la página de inicio o cerrar esta ventana.
                    </p>
                    <a href="/" class="btn btn-primary mt-3">Volver al Inicio</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}

@if (TempData["SuccessMessage"] != null)
{
    <script>
        // Pequeño script para mostrar el mensaje de TempData si no quieres incrustarlo directamente
        $(document).ready(function() {
            // Puedes mostrarlo en un toast de Bootstrap o simplemente reemplazar un elemento.
            // Por ahora, solo lo pondremos en consola para depuración, pero no es necesario para esta vista simple.
            console.log('@TempData["SuccessMessage"]');
        });
    </script>
}