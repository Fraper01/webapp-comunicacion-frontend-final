@using Microsoft.AspNetCore.Http; 

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - comuniCanción</title>
   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppcomuniCanción.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

</head>
<body>
    <header class ="hearder-img" id="inicio">
        <div class="container text-center header-contenedor">
            <div class="row align-items-center">
                <div class="col-2">
                    <div class="header-logo">
                        <img src="../img/comunicancion-150x84.webp"
                             alt="Logo del sitio">
                    </div>
                </div>
                <div class="col-8">
                    <nav class="navbar navbar-expand-lg">
                        <div class="container-fluid">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarScroll">
                                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                                    <li class="nav-item">
                                        <a class="nav-link fs-5 text-white" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link fs-5 text-white" asp-area="" asp-controller="Home" asp-action="Terapeutas">Conócenos</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link fs-5 text-white" asp-area="" asp-controller="Home" asp-action="LogopediaInfantil">Tratamientos</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link fs-5 text-white" asp-area="" asp-controller="Citas" asp-action="Contacta">Contáctanos</a>
                                    </li>

                                    @if (Context.Session.GetString("IsUserAuthenticated") == "true")
                                    {
                                        <li class="nav-item" id="adminAreasMenuItem">
                                            <a class="nav-link fs-5 text-white" asp-area="" asp-controller="Areas" asp-action="Index">Administrar Áreas</a>
                                        </li>
                                    }
                                    @if (Context.Session.GetString("IsUserAuthenticated") == "true")
                                    {
                                        <li class="nav-item" id="adminCitasMenuItem">
                                            <a class="nav-link fs-5 text-white" asp-area="" asp-controller="Citas" asp-action="Index">Administrar Citas</a>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
                <div class="col-2">
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("IsUserAuthenticated") == "true")
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-light" asp-area="" asp-controller="Login" asp-action="Logout">Cerrar Sesión</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-light" asp-area="" asp-controller="Login" asp-action="Index">Iniciar Sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebAppcomuniCanción - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>
    @* script de javascript *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
