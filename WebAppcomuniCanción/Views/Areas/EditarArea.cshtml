@using WebAppcomuniCanción.Models
@model AreaDto


@{
    ViewData["Title"] = "Editar Área de Desarrollo"; 
}

<div class="containerF">
    <h4 style="text-align:center">Editar Área de Desarrollo"</h4>
    <hr />
    <form method="post" asp-action="EditarArea" asp-controller="Areas">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id_Area" />

        <div class="row">
            <div class="col-10">
                <label asp-for="Area_Desarrollo">Nombre Área:</label>
                <input asp-for="Area_Desarrollo" type="text" class="form-control" style="margin-top:5px;" />
                <span asp-validation-for="Area_Desarrollo" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-10">
                <label asp-for="Descipcion_Area">Descripción Área:</label>
                <textarea asp-for="Descipcion_Area" class="form-control" rows="3" style="margin-top:5px;"></textarea>
                <span asp-validation-for="Descipcion_Area" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="margin-top:10px;">GUARDAR CAMBIOS</button>
    </form>
    <hr />
    <div>
        <a asp-action="Index">Retorna a la Tabla de Contenido</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}