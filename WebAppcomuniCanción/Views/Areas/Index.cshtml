@model List<WebAppcomuniCanción.Models.AreaDto>

@{
    ViewData["Title"] = "Áreas de Desarrollo";
}


<div class="containerA">
    <div>
        <h2>@ViewData["Title"]</h2>
        <p>
            <a asp-action="AgregarArea">Agregar Área</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Creación</th>
                    <th>Usuario</th>
                    <th class="sticky-header-c" style="width: 20%;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var area in Model)
                {
                    <tr>
                        <td>@area.Area_Desarrollo</td>
                        <td>@area.Descipcion_Area</td>
                        <td>@area.Fecha_Registro</td>
                        <td class ="tdcenter">@area.Usuario_Crea</td>
                        <td>
                            <div class="botonAcciones">
                                <a asp-action="EditarArea" class="btn botonEdit" asp-route-id="@area.Id_Area">Editar</a> |
                                <a asp-action="VerMedico" class="btn botonDetails" asp-route-id="@area.Id_Area">Detalle</a> |
                                <a asp-action="MostrarEliminarMedico" class="btn botonDelete" asp-route-id="@area.Id_Area">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a asp-controller="Home" asp-action="Index">Retorna Home</a>
        </div>
    </div>
</div>

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success">@TempData["MensajeExito"]</div>
}

@if (TempData["MensajeError"] != null)
{
    <div class="alert alert-danger">@TempData["MensajeError"]</div>
}
